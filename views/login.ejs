<%- include('partials/header') %>

<style>
  html, body {
    height: 100%;
    margin: 0;
    padding: 0;
  }
  body {
    min-height: 100vh;
    background: linear-gradient(135deg, #1a032b 0%, #3a1c71 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    font-family: 'Poppins', Arial, sans-serif;
  }
  .auth-container {
    background: rgba(20, 10, 40, 0.95);
    border-radius: 1.5rem;
    box-shadow: 0 0 24px 4px #a259ff, 0 0 0 2px #a259ff;
    display: flex;
    overflow: hidden;
    max-width: 600px;
    width: 100%;
    margin: 48px auto;
  }
  .auth-welcome {
    background: linear-gradient(135deg, #a259ff 60%, #3a1c71 100%);
    color: #fff;
    padding: 2.5rem 2rem;
    width: 50%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
    min-width: 220px;
  }
  .auth-welcome h2 {
    font-size: 2rem;
    font-weight: 800;
    margin-bottom: 0.5rem;
    letter-spacing: 1px;
  }
  .auth-welcome p {
    font-size: 1rem;
    opacity: 0.85;
    margin-bottom: 0;
  }
  .auth-form-section {
    background: transparent;
    color: #fff;
    padding: 2.5rem 2rem;
    width: 50%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    min-width: 220px;
  }
  .auth-form-section h2 {
    font-size: 1.7rem;
    font-weight: 700;
    margin-bottom: 1.5rem;
    text-align: left;
  }
  .auth-form-section form {
    display: flex;
    flex-direction: column;
    gap: 1.1rem;
  }
  .auth-form-section input {
    background: #1a032b;
    border: 1.5px solid #a259ff;
    border-radius: 0.7rem;
    padding: 0.9rem 1.1rem;
    color: #fff;
    font-size: 1rem;
    outline: none;
    transition: border 0.2s;
  }
  .auth-form-section input:focus {
    border: 1.5px solid #fff;
  }
  .auth-form-section button {
    background: linear-gradient(90deg, #a259ff 60%, #3a1c71 100%);
    color: #fff;
    border: none;
    border-radius: 2rem;
    padding: 0.9rem 0;
    font-size: 1.1rem;
    font-weight: 700;
    margin-top: 0.5rem;
    cursor: pointer;
    box-shadow: 0 2px 12px 0 #a259ff44;
    transition: background 0.2s, box-shadow 0.2s;
  }
  .auth-form-section button:hover {
    background: linear-gradient(90deg, #fff 0%, #a259ff 100%);
    color: #3a1c71;
    box-shadow: 0 4px 24px 0 #a259ff99;
  }
  .auth-form-section .auth-link {
    margin-top: 1.2rem;
    text-align: center;
    font-size: 0.98rem;
    color: #fff;
    opacity: 0.8;
  }
  .auth-form-section .auth-link a {
    color: #a259ff;
    text-decoration: underline;
    font-weight: 600;
    margin-left: 0.2rem;
    transition: color 0.2s;
  }
  .auth-form-section .auth-link a:hover {
    color: #fff;
  }
  @media (max-width: 700px) {
    .auth-container { flex-direction: column; max-width: 95vw; }
    .auth-welcome, .auth-form-section { width: 100%; min-width: 0; text-align: center; align-items: center; }
    .auth-welcome { padding: 2rem 1rem; }
    .auth-form-section { padding: 2rem 1rem; }
  }
</style>

<div class="auth-container">
  <div class="auth-welcome">
    <h2>WELCOME<br/>BACK!</h2>
    <p>Lorem ipsum, dolor sit amet consectetur adipisicing.</p>
  </div>
  <div class="auth-form-section">
    <h2>Login</h2>
    <form method="POST" action="/login">
      <input name="username" placeholder="Username" required />
      <input name="password" type="password" placeholder="Password" required />
      <button type="submit">Login</button>
    </form>
    <div class="auth-link">Don't have an account?<a href="/register">Register</a></div>
  </div>
</div>

<%- include('partials/footer') %>

