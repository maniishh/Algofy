<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Profile</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <style>
    body {
      background: linear-gradient(135deg, #e0e7ff 0%, #f0fdfa 100%);
      min-height: 100vh;
    }
    .header-glass {
      backdrop-filter: blur(18px) saturate(140%);
      -webkit-backdrop-filter: blur(18px) saturate(140%);
    }
    /* Stylish custom scrollbar */
    ::-webkit-scrollbar {
      width: 12px;
      background: transparent;
    }
    ::-webkit-scrollbar-thumb {
      background: linear-gradient(135deg, #7c3aed 40%, #3b82f6 100%);
      border-radius: 8px;
      border: 2px solid #18181b;
      box-shadow: 0 2px 8px #7c3aed44;
      transition: background 0.3s;
    }
    ::-webkit-scrollbar-thumb:hover {
      background: linear-gradient(135deg, #a78bfa 0%, #6366f1 100%);
    }
    ::-webkit-scrollbar-track {
      background: #18181b;
      border-radius: 8px;
    }
    html {
      scrollbar-color: #7c3aed #18181b;
      scrollbar-width: thin;
    }
  </style>
</head>
<body class="min-h-screen bg-gradient-to-br from-blue-900 via-purple-900 to-black text-white">
  <div class="flex items-center justify-between w-full mb-10 px-2 md:px-8 py-4 rounded-2xl bg-gradient-to-r from-blue-900/80 via-purple-900/80 to-black/80 shadow-2xl border-b-4 border-purple-500/40 relative header-glass">
    <div class="flex items-center gap-3">
      <span class="inline-flex items-center justify-center w-14 h-14 rounded-xl bg-gradient-to-br from-blue-500 via-purple-500 to-indigo-700 shadow-lg border-2 border-blue-400/40">
        <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M16 18v-2a2 2 0 00-2-2H6a2 2 0 00-2 2v2m16-6V7a2 2 0 00-2-2H6a2 2 0 00-2 2v5m16 0a2 2 0 01-2 2H6a2 2 0 01-2-2m16 0V7a2 2 0 00-2-2H6a2 2 0 00-2 2v5" /></svg>
      </span>
      <span class="text-3xl md:text-4xl font-extrabold bg-gradient-to-r from-blue-400 via-purple-400 to-pink-400 bg-clip-text text-transparent drop-shadow-lg tracking-tight">Student Portal</span>
      <span class="hidden md:inline-block ml-3 px-3 py-1 rounded-full bg-gradient-to-r from-purple-600 via-blue-600 to-indigo-600 text-xs font-bold text-white shadow-md animate-pulse">DSA Dashboard</span>
    </div>
    <div class="space-x-4 hidden md:flex" id="desktopAuthBtns">
      <a href="/" class="bg-gradient-to-r from-blue-500 via-purple-500 to-indigo-600 px-6 py-2 rounded-lg text-white font-semibold shadow-md hover:from-blue-400 hover:to-purple-700 transition">Home</a>
      <a href="/logout" class="bg-gradient-to-r from-gray-700 via-gray-800 to-gray-900 px-6 py-2 rounded-lg text-white font-semibold shadow-md hover:from-gray-600 hover:to-gray-800 transition">Logout</a>
    </div>
    <!-- Mobile menu button -->
    <div class="md:hidden flex">
      <button id="mobileMenuBtn" class="bg-gradient-to-r from-purple-600 via-purple-800 to-black text-white px-4 py-2 rounded-lg shadow-lg flex items-center gap-2 focus:outline-none">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16"/></svg>
      </button>
    </div>
    <div class="absolute left-0 bottom-0 w-full h-1 bg-gradient-to-r from-blue-400 via-purple-500 to-pink-400 blur-sm opacity-60 pointer-events-none"></div>
  </div>
  <section class="max-w-4xl mx-auto bg-white/10 backdrop-blur-2xl shadow-2xl mt-10 rounded-2xl p-8 border border-purple-400/30 relative overflow-hidden glass-modal">
    <div class="absolute -top-10 -right-10 w-40 h-40 bg-purple-400 rounded-full opacity-20 blur-2xl"></div>
    <% if (typeof error !== 'undefined' && error) { %>
      <div class="mb-4 p-3 bg-red-400/30 text-red-200 rounded border border-red-300/30 text-center font-semibold shadow">
        <%= error %>
      </div>
    <% } %>
    <div class="flex items-center gap-8 border-b border-purple-300/20 pb-8 relative flex-col md:flex-row md:items-center md:gap-8">
      <img src="/uploads/<%= user.profile_pic %>" alt="Profile Picture"
        class="w-28 h-28 rounded-full border-4 border-purple-500 object-cover shadow-lg ring-4 ring-purple-300/40 transition-transform hover:scale-105 duration-300 bg-black/30" />
      <div class="flex-1 w-full">
        <h2 class="text-3xl font-extrabold mb-2 text-purple-200 drop-shadow">Welcome, <span id="profile-username" class="bg-gradient-to-r from-blue-400 via-purple-400 to-pink-400 bg-clip-text text-transparent"><%= user.username %></span>!</h2>
        <p><span class="font-semibold text-purple-200">Email:</span> <%= user.email %></p>
        <p><span class="font-semibold text-purple-200">Branch:</span> <%= user.branch %></p>
       
        </div>
      </div>
      <button id="editProfileBtn" type="button" class="md:absolute md:top-0 md:right-0 bg-gradient-to-r from-purple-600 via-purple-800 to-black text-white px-4 py-2 rounded-md shadow hover:from-purple-500 hover:to-purple-900 transition-all text-sm font-semibold mt-4 md:mt-0 w-full md:w-auto">Edit Profile</button>
    </div>
    <div id="editProfileModal" class="fixed inset-0 z-50 flex items-center justify-center bg-black bg-opacity-60 hidden">
      <div class="bg-white/10 backdrop-blur-2xl rounded-xl shadow-2xl p-8 w-full max-w-md relative glass-modal">
        <button id="closeModalBtn" type="button" class="absolute top-3 right-3 text-gray-400 hover:text-purple-400 text-2xl">&times;</button>
        <h3 class="text-xl font-bold mb-4 text-purple-400">Edit Profile</h3>
        <form method="POST" action="/edit-profile" enctype="multipart/form-data" class="space-y-4" id="editProfileForm">
          <div>
            <label class="block font-semibold mb-1 text-purple-200">Name</label>
            <input type="text" name="username" value="<%= user.username %>" class="w-full p-3 border-2 border-purple-300/60 bg-black text-gray-900 rounded-md focus:ring-2 focus:ring-purple-400 outline-none transition" required />
          </div>
          <div>
            <label class="block font-semibold mb-1 text-purple-200">Profile Photo</label>
            <input type="file" name="profile_pic" accept="image/*" class="w-full p-2 border-2 border-purple-300/60 bg-white/30 rounded-md" />
          </div>
          <button type="submit" class="bg-gradient-to-r from-purple-600 via-purple-800 to-black text-white px-5 py-2 rounded-md hover:from-purple-500 hover:to-purple-900 transition-all font-semibold w-full">Save Changes</button>
        </form>
      </div>
    </div>
    <div class="mb-10 flex flex-col md:flex-row md:items-center md:justify-between gap-8 border-b border-purple-300/20 pb-8">
      <div class="flex-1">
        <h3 class="text-2xl font-bold text-purple-300 flex items-center gap-2 mb-3">
          <svg class="w-7 h-7 text-purple-400" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M13 16h-1v-4h-1m4 0h-1v-4h-1m-4 0h-1v-4h-1"/></svg>
          <span>Your DSA Goal</span>
        </h3>
        <% if (goal && goal.type && goal.count) { %>
          <div class="mb-2 text-purple-200 text-lg">
            <span class="font-semibold">Goal:</span> <span class="text-purple-100 font-bold"><%= goal.count %></span> questions <span class="capitalize">per <%= goal.type %></span>
          </div>
          <div class="w-full max-w-md bg-purple-900/30 rounded-full h-5 mb-2 overflow-hidden">
            <div class="bg-gradient-to-r from-purple-400 to-purple-700 h-5 rounded-full transition-all duration-500" style="width: <%= Math.min(100, Math.round((goal.progress/goal.count)*100)) %>%;"></div>
          </div>
          <div class="text-xs text-purple-200 mt-1">Progress: <span class="font-semibold text-purple-100"><%= goal.progress %></span> / <span class="font-semibold text-purple-100"><%= goal.count %></span> (<span class="font-semibold text-purple-100"><%= Math.min(100, Math.round((goal.progress/goal.count)*100)) %></span>%)</div>
        <% } else { %>
          <div class="text-purple-400 italic mb-2">No goal set yet.</div>
        <% } %>
      </div>
      <div class="flex-shrink-0 flex items-center justify-center gap-3 mt-4 md:mt-0">
        <button id="setGoalBtn" type="button" class="bg-gradient-to-r from-purple-600 via-purple-800 to-black hover:from-purple-500 hover:to-purple-900 text-white px-6 py-3 rounded-lg shadow-lg font-semibold text-base transition-all">Set Goal</button>
        <% if (goal) { %>
        <form method="POST" action="/reset-goal" onsubmit="return confirm('Are you sure you want to reset your goal?');">
          <button type="submit" class="bg-gradient-to-r from-pink-500 via-red-500 to-red-700 hover:from-pink-400 hover:to-red-800 text-white px-4 py-3 rounded-lg shadow-lg font-semibold text-base transition-all">Reset Goal</button>
        </form>
        <% } %>
      </div>
      <!-- Set Goal Modal -->
      <div id="setGoalModal" class="fixed inset-0 z-50 flex items-center justify-center bg-black bg-opacity-60 hidden">
        <div class="bg-white/10 backdrop-blur-2xl rounded-xl shadow-2xl p-8 w-full max-w-md relative glass-modal">
          <button id="closeSetGoalModalBtn" type="button" class="absolute top-3 right-3 text-gray-400 hover:text-purple-400 text-2xl">&times;</button>
          <h3 class="text-xl font-bold mb-4 text-purple-400">Set Your DSA Goal</h3>
          <form method="POST" action="/set-goal" class="space-y-4" id="setGoalForm">
            <div>
              <label class="block font-semibold mb-1 text-purple-200">Questions per</label>
              <select name="type" class="w-full p-3 border-2 border-purple-300/60 bg-black rounded-md" required>
                <option value="day">Day</option>
                <option value="week">Week</option>
                <option value="month">Month</option>
              </select>
            </div>
            <div>
              <label class="block font-semibold mb-1 text-purple-200">Count</label>
              <input type="number" name="count" min="1" class="w-full p-3 border-2 border-purple-300/60 bg-white/30 rounded-md" required />
            </div>
            <button type="submit" class="bg-gradient-to-r from-purple-600 via-purple-800 to-black text-white px-5 py-2 rounded-md hover:from-purple-500 hover:to-purple-900 transition-all font-semibold w-full">Save Goal</button>
          </form>
        </div>
      </div>
    </div>
    <div class="overflow-x-auto mt-6">
      <!-- Topic count summary and Add Question Button in a row -->
      <div class="flex flex-col md:flex-row md:items-center md:justify-between mb-4 gap-2">
        <div class="flex flex-wrap gap-2 items-center">
          <span class="font-semibold text-purple-200">Topics:</span>
          <% const topicCounts = {}; questions.forEach(q => { topicCounts[q.topic] = (topicCounts[q.topic] || 0) + 1; }); %>
          <% Object.entries(topicCounts).forEach(([topic, count]) => { %>
            <span class="inline-block bg-gradient-to-r from-blue-500 via-purple-500 to-pink-500 text-white px-3 py-1 rounded-full text-xs font-bold shadow-sm">
              <%= topic %> (<%= count %>)
            </span>
          <% }) %>
        </div>
        <button id="addQuestionBtn" type="button" class="bg-gradient-to-r from-blue-500 via-purple-500 to-indigo-600 px-6 py-2 rounded-lg text-white font-semibold shadow-md hover:from-blue-400 hover:to-purple-700 transition-all text-base">+ Add Question</button>
      </div>
      <table class="min-w-full text-sm text-left border border-purple-400/30 rounded-xl overflow-hidden shadow-md bg-white/10 backdrop-blur-xl">
        <thead class="bg-purple-900/40">
          <tr>
            <th class="px-4 py-3 font-semibold text-purple-200">S.No.</th>
            <th class="px-4 py-3 font-semibold text-purple-200">Question</th>
            <th class="px-4 py-3 font-semibold text-purple-200">Topic</th>
            <th class="px-4 py-3 font-semibold text-purple-200">Level</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-purple-900/20">
          <% questions.forEach((q, index) => { %>
            <tr class="hover:bg-purple-900/20 transition">
              <td class="px-4 py-3 text-purple-100 font-medium"><%= index + 1 %></td>
              <td class="px-4 py-3">
                <% if (q.link) { %>
                  <a href="<%= q.link %>" target="_blank" class="text-blue-400 hover:underline hover:text-blue-200 transition">
                    <%= q.question %>
                  </a>
                <% } else { %>
                  <span class="text-purple-100"><%= q.question %></span>
                <% } %>
              </td>
              <td class="px-4 py-3"><%= q.topic %></td>
              <td class="px-4 py-3"><%= q.level %></td>
              <td class="px-4 py-3 flex gap-2">
                <button type="button" class="edit-question-btn p-1 rounded hover:bg-yellow-100/20" data-id="<%= q.id %>" data-question='<%- JSON.stringify(q) %>' title="Edit">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-yellow-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M15.232 5.232l3.536 3.536M9 13l6.586-6.586a2 2 0 112.828 2.828L11.828 15.828a2 2 0 01-2.828 0L5 11.828a2 2 0 010-2.828L9 13z" />
                  </svg>
                </button>
                <form method="POST" action="/delete-question" style="display:inline;">
                  <input type="hidden" name="id" value="<%= q.id %>" />
                  <button type="submit" class="p-1 rounded hover:bg-red-100/20" title="Delete" onclick="return confirm('Are you sure you want to delete this question?');">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-red-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
                    </svg>
                  </button>
                </form>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
      <!-- Edit Question Modal -->
      <div id="editQuestionModal" class="fixed inset-0 z-50 flex items-center justify-center bg-black bg-opacity-60 hidden">
        <div class="bg-white/10 backdrop-blur-2xl rounded-xl shadow-2xl p-8 w-full max-w-md relative glass-modal">
          <button id="closeEditModalBtn" type="button" class="absolute top-3 right-3 text-gray-400 hover:text-purple-400 text-2xl">&times;</button>
          <h3 class="text-xl font-bold mb-4 text-purple-400">Edit Question</h3>
          <form method="POST" action="/edit-question" class="space-y-4" id="editQuestionForm">
            <input type="hidden" name="id" id="edit-q-id" />
            <div>
              <label class="block font-semibold mb-1 text-purple-200">Question</label>
              <input type="text" name="question" id="edit-q-question" class="w-full p-3 border-2 border-purple-300/60 bg-white/30 rounded-md" required />
            </div>
            <div>
              <label class="block font-semibold mb-1 text-purple-200">Link</label>
              <input type="url" name="link" id="edit-q-link" class="w-full p-3 border-2 border-purple-300/60 bg-white/30 rounded-md" />
            </div>
            <div>
              <label class="block font-semibold mb-1 text-purple-200">Topic</label>
              <input type="text" name="topic" id="edit-q-topic" class="w-full p-3 border-2 border-purple-300/60 bg-white/30 rounded-md" required />
            </div>
            <div>
              <label class="block font-semibold mb-1 text-purple-200">Level</label>
              <select name="level" id="edit-q-level" class="w-full p-3 border-2 border-purple-300/60 bg-white/30 rounded-md" required>
                <option value="Easy">Easy</option>
                <option value="Medium">Medium</option>
                <option value="Hard">Hard</option>
              </select>
            </div>
            <button type="submit" class="bg-gradient-to-r from-purple-600 via-purple-800 to-black text-white px-5 py-2 rounded-md hover:from-purple-500 hover:to-purple-900 transition-all font-semibold w-full">Save Changes</button>
          </form>
        </div>
      </div>
      <!-- Add Question Modal -->
      <div id="addQuestionModal" class="fixed inset-0 z-50 flex items-center justify-center bg-black bg-opacity-60 hidden">
        <div class="bg-white/10 backdrop-blur-2xl rounded-xl shadow-2xl p-8 w-full max-w-md relative glass-modal">
          <button id="closeAddQuestionModalBtn" type="button" class="absolute top-3 right-3 text-gray-400 hover:text-purple-400 text-2xl">&times;</button>
          <h3 class="text-xl font-bold mb-4 text-purple-400">Add New Question</h3>
          <form method="POST" action="/add-question" class="space-y-4" id="addQuestionForm">
            <div>
              <label class="block font-semibold mb-1 text-purple-200">Question</label>
              <input type="text" name="question" class="w-full p-3 border-2 border-purple-300/60 bg-white/30 rounded-md" required />
            </div>
            <div>
              <label class="block font-semibold mb-1 text-purple-200">Link</label>
              <input type="url" name="link" class="w-full p-3 border-2 border-purple-300/60 bg-white/30 rounded-md" />
            </div>
            <div>
              <label class="block font-semibold mb-1 text-purple-200">Topic</label>
              <input type="text" name="topic" class="w-full p-3 border-2 border-purple-300/60 bg-white/30 rounded-md" required />
            </div>
            <div>
              <label class="block font-semibold mb-1 text-purple-200">Level</label>
              <select name="level" class="w-full p-3 border-2 border-purple-300/60 bg-white/30 rounded-md" required>
                <option value="Easy">Easy</option>
                <option value="Medium">Medium</option>
                <option value="Hard">Hard</option>
              </select>
            </div>
            <button type="submit" class="bg-gradient-to-r from-purple-600 via-purple-800 to-black text-white px-5 py-2 rounded-md hover:from-purple-500 hover:to-purple-900 transition-all font-semibold w-full">Add Question</button>
          </form>
        </div>
      </div>
    </div>
  </section>

</body>
</html>
<script>
// Sync Edit Profile button for mobile/desktop
const editBtn = document.getElementById('editProfileBtn');
const editBtnMobile = document.getElementById('editProfileBtnMobile');
const modal = document.getElementById('editProfileModal');
const closeModalBtn = document.getElementById('closeModalBtn');
if(editBtn) editBtn.onclick = () => modal.classList.remove('hidden');
if(editBtnMobile) editBtnMobile.onclick = () => modal.classList.remove('hidden');
if(closeModalBtn && modal) closeModalBtn.onclick = () => modal.classList.add('hidden');

// Set Goal Modal logic
const setGoalBtn = document.getElementById('setGoalBtn');
const setGoalModal = document.getElementById('setGoalModal');
const closeSetGoalModalBtn = document.getElementById('closeSetGoalModalBtn');
if(setGoalBtn && setGoalModal) {
  setGoalBtn.onclick = () => setGoalModal.classList.remove('hidden');
}
if(closeSetGoalModalBtn && setGoalModal) {
  closeSetGoalModalBtn.onclick = () => setGoalModal.classList.add('hidden');
}

// Add Question Modal logic
const addQuestionBtn = document.getElementById('addQuestionBtn');
const addQuestionModal = document.getElementById('addQuestionModal');
const closeAddQuestionModalBtn = document.getElementById('closeAddQuestionModalBtn');
if(addQuestionBtn && addQuestionModal) {
  addQuestionBtn.onclick = () => addQuestionModal.classList.remove('hidden');
}
if(closeAddQuestionModalBtn && addQuestionModal) {
  closeAddQuestionModalBtn.onclick = () => addQuestionModal.classList.add('hidden');
}
</script>

