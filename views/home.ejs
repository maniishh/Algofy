<style>
  .animate-float {
    animation: float 3s ease-in-out infinite;
  }
  .animate-float2 {
    animation: float2 3.2s ease-in-out infinite;
  }
  .animate-float3 {
    animation: float3 2.8s ease-in-out infinite;
  }
  @keyframes float {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-18px); }
  }
  @keyframes float2 {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-12px); }
  }
  @keyframes float3 {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-22px); }
  }
  /* Stylish custom scrollbar */
  ::-webkit-scrollbar {
    width: 12px;
    background: transparent;
  }
  ::-webkit-scrollbar-thumb {
    background: linear-gradient(135deg, #7c3aed 40%, #3b82f6 100%);
    border-radius: 8px;
    border: 2px solid #18181b;
    box-shadow: 0 2px 8px #7c3aed44;
    transition: background 0.3s;
  }
  ::-webkit-scrollbar-thumb:hover {
    background: linear-gradient(135deg, #a78bfa 0%, #6366f1 100%);
  }
  ::-webkit-scrollbar-track {
    background: #18181b;
    border-radius: 8px;
  }
  /* Firefox */
  html {
    scrollbar-color: #7c3aed #18181b;
    scrollbar-width: thin;
  }
</style>

