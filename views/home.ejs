<!-- Mobile auth menu (hidden by default) -->
<div id="mobileAuthMenu" class="fixed inset-0 z-50 bg-black bg-opacity-60 flex items-center justify-center hidden">
  <div class="bg-white/90 rounded-2xl shadow-2xl p-8 flex flex-col gap-4 w-72 text-center relative">
    <button id="closeMobileMenu" class="absolute top-3 right-3 text-gray-400 hover:text-purple-600 text-2xl">&times;</button>
    <button id="openRegisterMobile" class="bg-blue-600 px-6 py-2 rounded-md text-white hover:bg-blue-700">Register</button>
    <button id="openLoginMobile" class="bg-gray-600 px-6 py-2 rounded-md text-white hover:bg-gray-700">Login</button>
  </div>
</div>

 
<svg class="absolute left-0 top-0 w-48 h-48 opacity-30 -z-10" viewBox="0 0 200 200" fill="none"><circle cx="100" cy="100" r="100" fill=\"#3b82f6\"/></svg>
<svg class="absolute right-0 bottom-0 w-64 h-64 opacity-20 -z-10" viewBox="0 0 300 300" fill="none"><rect x="30" y="30" width="240" height="240" rx="40" fill=\"#10b981\"/><g><rect x=\"70\" y=\"70\" width=\"60\" height=\"20\" rx=\"6\" fill=\"#fff\"/><rect x=\"70\" y=\"110\" width=\"160\" height=\"20\" rx=\"6\" fill=\"#fff\"/><rect x=\"70\" y=\"150\" width=\"120\" height=\"20\" rx=\"6\" fill=\"#fff\"/></g></svg>
<svg class="absolute left-10 bottom-10 w-32 h-32 opacity-20 -z-10" viewBox=\"0 0 120 120" fill="none"><rect x=\"10\" y=\"10\" width=\"100" height=\"100\" rx=\"20\" fill=\"#f59e42\"/><rect x=\"30\" y=\"30\" width=\"60\" height=\"10\" rx=\"4\" fill=\"#fff\"/><rect x=\"30\" y=\"50\" width=\"40" height=\"10\" rx=\"4" fill=\"#fff\"/></svg>
    </div>

    <!-- Register Modal -->
    <div id="registerModal" class="fixed inset-0 z-50 flex items-center justify-center bg-black bg-opacity-60 hidden">
      <div class="relative w-full max-w-lg flex rounded-2xl shadow-2xl overflow-hidden glass-modal">
        <!-- Left: Glassy purple gradient -->
        <div class="hidden md:flex flex-col justify-center items-center w-2/5 bg-gradient-to-br from-purple-700/80 via-purple-900/80 to-black/90 backdrop-blur-2xl p-6 text-white border-r-2 border-white/10 relative">
          <svg class="absolute top-4 left-4 w-10 h-10 opacity-30" viewBox="0 0 48 48" fill="none"><circle cx="24" cy="24" r="24" fill="#a78bfa"/></svg>
          <img src="/images/sign.jpg" alt="Register" class="w-16 h-16 rounded-full border-4 border-purple-400 shadow-xl mb-4 z-10" />
          <h2 class="text-xl font-extrabold mb-1 drop-shadow-lg">Join Us!</h2>
          <p class="text-sm text-purple-100 mb-1 text-center">Create your account to start your coding journey.</p>
        </div>
        <!-- Right: Form -->
        <div class="flex-1 bg-white/10 backdrop-blur-2xl p-6 flex flex-col justify-center relative">
          <button id="closeRegister" type="button" class="absolute top-2 right-2 text-gray-300 hover:text-purple-400 text-2xl font-bold z-20">&times;</button>
          <h2 class="text-xl font-bold mb-3 text-purple-900">Register</h2>
          <form method="POST" action="/register" enctype="multipart/form-data" class="space-y-3">
            <input name="username" placeholder="Username" required class="w-full p-2 border-2 border-purple-300/60 bg-white/30 text-gray-900 rounded-md focus:ring-2 focus:ring-purple-400 outline-none transition text-base" />
            <input name="email" placeholder="Email" type="email" required class="w-full p-2 border-2 border-purple-300/60 bg-white/30 text-gray-900 rounded-md focus:ring-2 focus:ring-purple-400 outline-none transition text-base" />
            <input name="branch" placeholder="Branch" required class="w-full p-2 border-2 border-purple-300/60 bg-white/30 text-gray-900 rounded-md focus:ring-2 focus:ring-purple-400 outline-none transition text-base" />
            <input name="password" type="password" placeholder="Password" required class="w-full p-2 border-2 border-purple-300/60 bg-white/30 text-gray-900 rounded-md focus:ring-2 focus:ring-purple-400 outline-none transition text-base" />
            <label class="block font-semibold mb-1 text-purple-900 text-sm">Upload Profile Picture</label>
            <input type="file" name="profile_pic" accept="image/*" class="w-full p-1 border-2 border-purple-300/60 bg-white/30 rounded-md text-sm" />
            <button type="submit" class="bg-gradient-to-r from-purple-600 via-purple-800 to-black text-white px-4 py-2 rounded-md hover:from-purple-500 hover:to-purple-900 font-semibold shadow-lg transition w-full">Register</button>
          </form>
          <p class="mt-3 text-xs text-center text-gray-900">Already have an account? <a href="#" id="switchToLogin" class="text-purple-900 hover:underline font-semibold">Login here</a></p>
        </div>
      </div>
    </div>

    <!-- Login Modal -->
    <div id="loginModal" class="fixed inset-0 z-50 flex items-center justify-center bg-black bg-opacity-60 hidden">
      <div class="relative w-full max-w-2xl flex rounded-2xl shadow-2xl overflow-hidden glass-modal">
        <!-- Left: Glassy purple gradient -->
        <div class="hidden md:flex flex-col justify-center items-center w-1/2 bg-gradient-to-br from-purple-700/70 via-purple-900/60 to-black/80 backdrop-blur-2xl p-10 text-white border-r-2 border-white/10 relative">
          <svg class="absolute top-4 left-4 w-12 h-12 opacity-30" viewBox="0 0 48 48" fill="none"><circle cx="24" cy="24" r="24" fill="#a78bfa"/></svg>
          <img src="/images/log.jpg" alt="Login" class="w-24 h-24 rounded-full border-4 border-purple-400 shadow-xl mb-6 z-10" />
          <h2 class="text-3xl font-extrabold mb-2 drop-shadow-lg">Welcome Back!</h2>
          <p class="text-base text-purple-100 mb-2">Login to access your dashboard.</p>
        </div>
        <!-- Right: Form -->
        <div class="flex-1 bg-white/10 backdrop-blur-2xl p-8 md:p-12 flex flex-col justify-center relative">
          <button id="closeLogin" type="button" class="absolute top-3 right-3 text-gray-300 hover:text-purple-400 text-3xl font-bold z-20">&times;</button>
          <h2 class="text-2xl font-bold mb-4 text-purple-700">Login</h2>
          <form method="POST" action="/login" class="space-y-4">
            <input name="username" placeholder="Username" required class="w-full p-3 border-2 border-purple-300/60 bg-white/30 text-gray-900 rounded-lg focus:ring-2 focus:ring-purple-400 outline-none transition" />
            <input name="password" type="password" placeholder="Password" required class="w-full p-3 border-2 border-purple-300/60 bg-white/30 text-gray-900 rounded-lg focus:ring-2 focus:ring-purple-400 outline-none transition" />
            <button type="submit" class="bg-gradient-to-r from-purple-600 via-purple-800 to-black text-white px-6 py-2 rounded-lg hover:from-purple-500 hover:to-purple-900 font-semibold shadow-lg transition">Login</button>
          </form>
          <p class="mt-4 text-sm text-center text-gray-900">Don't have an account? <a href="#" id="switchToRegister" class="text-purple-900 hover:underline font-semibold">Register here</a></p>
        </div>
      </div>
    </div>

    <style>
      .glass-modal {
        border: 2.5px solid rgba(168,139,250,0.25);
        box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.37), 0 0 24px 4px #a78bfa44;
        background: linear-gradient(120deg, rgba(55,0,60,0.18) 0%, rgba(168,139,250,0.18) 100%);
        backdrop-filter: blur(24px) saturate(120%);
        -webkit-backdrop-filter: blur(24px) saturate(120%);
      }
    </style>

    <script>
      const openRegister = document.getElementById('openRegister');
      const openLogin = document.getElementById('openLogin');
      const registerModal = document.getElementById('registerModal');
      const loginModal = document.getElementById('loginModal');
      const closeRegister = document.getElementById('closeRegister');
      const closeLogin = document.getElementById('closeLogin');
      const switchToLogin = document.getElementById('switchToLogin');
      const switchToRegister = document.getElementById('switchToRegister');

      openRegister.addEventListener('click', () => {
        registerModal.classList.remove('hidden');
      });
      openLogin.addEventListener('click', () => {
        loginModal.classList.remove('hidden');
      });
      closeRegister.addEventListener('click', () => {
        registerModal.classList.add('hidden');
      });
      closeLogin.addEventListener('click', () => {
        loginModal.classList.add('hidden');
      });
      switchToLogin.addEventListener('click', (e) => {
        e.preventDefault();
        registerModal.classList.add('hidden');
        loginModal.classList.remove('hidden');
      });
      switchToRegister.addEventListener('click', (e) => {
        e.preventDefault();
        loginModal.classList.add('hidden');
        registerModal.classList.remove('hidden');
      });
      window.addEventListener('click', (e) => {
        if (e.target === registerModal) registerModal.classList.add('hidden');
        if (e.target === loginModal) loginModal.classList.add('hidden');
      });

      // Mobile menu logic
      const mobileMenuBtn = document.getElementById('mobileMenuBtn');
      const mobileAuthMenu = document.getElementById('mobileAuthMenu');
      const closeMobileMenu = document.getElementById('closeMobileMenu');
      const openRegisterMobile = document.getElementById('openRegisterMobile');
      const openLoginMobile = document.getElementById('openLoginMobile');

      if (mobileMenuBtn && mobileAuthMenu && closeMobileMenu) {
        mobileMenuBtn.addEventListener('click', () => {
          mobileAuthMenu.classList.remove('hidden');
        });
        closeMobileMenu.addEventListener('click', () => {
          mobileAuthMenu.classList.add('hidden');
        });
        openRegisterMobile.addEventListener('click', () => {
          mobileAuthMenu.classList.add('hidden');
          registerModal.classList.remove('hidden');
        });
        openLoginMobile.addEventListener('click', () => {
          mobileAuthMenu.classList.add('hidden');
          loginModal.classList.remove('hidden');
        });
        // Also close menu if background is clicked
        mobileAuthMenu.addEventListener('click', (e) => {
          if (e.target === mobileAuthMenu) mobileAuthMenu.classList.add('hidden');
        });
      }
    </script>
  </div>
